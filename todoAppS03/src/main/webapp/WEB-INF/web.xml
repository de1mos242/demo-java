<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

	<filter>
		<filter-name>todoFilter</filter-name>
		<filter-class>todoAppS03.TodoFilter</filter-class>
		<init-param>
			<param-name>filter greeting name</param-name>
			<param-value>todoAPPP!</param-value>
		</init-param>
		<init-param>
			<param-name>good bye string</param-name>
			<param-value>bye all!!</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>todoFilter</filter-name>
		<url-pattern>/todo</url-pattern>
	</filter-mapping>
	
	<listener>
		<listener-class>todoAppS03.SqlInitListener</listener-class>
	</listener>

    <servlet>
        <servlet-name>emperor</servlet-name>
        <servlet-class>todoAppS03.EmperorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>todo</servlet-name>
        <servlet-class>todoAppS03.TodoServlet</servlet-class>
    </servlet>
    <servlet>
    	<servlet-name>sqlite</servlet-name>
    	<servlet-class>todoAppS03.SqliteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>emperor</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>todo</servlet-name>
        <url-pattern>/todo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>sqlite</servlet-name>
    	<url-pattern>/sqlite/*</url-pattern>
    </servlet-mapping>
</web-app>